{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "es6",
    "target": "es2017",
    "allowJs": true,
    "rootDir": "./src",
    "composite": true,
    "outDir": ".tmp/tsc",
    "emitDeclarationOnly": false,
    "types": [],
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".tmp"
  ]
}
