{
  "type": "module",
  "name": "webpack-frontend-template",
  "version": "1.2.1",
  "private": true,
  "description": "A webpack starter template for Frontend projects with typescript",
  "scripts": {
    "start": "webpack serve --env dev --open",
    "format": "prettier --ignore-path .eslintignore --write '**/**/*.{js,ts,tsx}'",
    "lint": "eslint --ignore-path .eslintignore './src/**/*.{js,ts,tsx}'",
    "test": "jest --verbose --watch",
    "test:ci": "jest --verbose --forceExit",
    "preversion": "npm-run-all format lint",
    "postversion": "git push && git push --tags",
    "prod": "webpack --env prod",
    "build": "npm-run-all format lint prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "@typescript-eslint/parser": "^5.62.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "css-loader": "^7.1.1",
    "eslint": "^8.39.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "^1.64.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^5.0.4",
    "webpack-merge": "^5.10.0"
  }
}
